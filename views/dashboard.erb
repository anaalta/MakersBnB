<link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css ' rel='stylesheet'>
<link href='/styles.css' rel='stylesheet'>

<h1> Welcome to your dashboard </h1>

<form action ='/' method = 'get'>
  <input type='hidden' name='_method' value='delete'>
  <input class='btn' type='submit' value ='Sign Out'>
</form>

<form action = '/spaces/new' method = 'get'>
  <button name = 'add_a_space' type = 'submit'>Add your space here!</button>
</form>

<ol id='listings'>
  <% @listings.each do |listing|%>
    <li>
      Name: <%= listing.property_name%>
      Description: <%= listing.description%>
      Price per night: <%=listing.price_per_night%>
      Available From: <%=listing.available_from%>
      Available Until: <%=listing.available_until%>
      <br>
      <form action = "/booking/new" method = 'get'>
        <input type='hidden' name='property_id' value=<%=listing.id%>>
        <button class='btn' id='bookme'>Book Me</button>
      </form>
      <%end%>
    </li>
  </ol>
